{
    "checks": {
        "google.com": {
            "type": "metric",
            "command": "check-ping.rb  -h google.com",
            "subscribers": [ "casa" ],
            "handlers": ["homeassistant-sensor"],
            "interval": {{sensu_default_check_interval}},
            "aggregate": "homeassistant",
            "homeassistant": {
                "sensor_type": "binary_sensor"
            }
        },
        "metrics.speedtest": {
            "type": "metric",
            "command": "{{sensu_custom_checks_dir}}/speedtest-check.sh -u",
            "subscribers": [ "casa" ],
            "interval": 60,
            "timeout": 30,
            "handlers": ["homeassistant-sensor"],
            "homeassistant": {
                "sensor_type": "sensor"
            }
        }
    }
}