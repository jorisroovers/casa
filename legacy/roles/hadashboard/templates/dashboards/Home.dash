title: Home
widget_dimensions: [120, 120]
widget_margins: [5, 5]
columns: 8

{% include "./templates/dashboards/components.yaml" %}

humidity:
    widget_type: sensor
    title: Binnen Vochtigheid
    precision: 0
    entity: sensor.living_room_thermostat_humidity
    value_style: "font-size: 350%; color: #fff;"
    unit_style: "color: #fff"

rijtijd_ilse:
    widget_type: sensor
    title: Reistijd Ilse
    precision: 0
    entity: sensor.rijtijd_werk_ilse
    value_style: "font-size: 350%"

clock:
    widget_type: clock
    time_format: "24hr"
    date_style: "font-size: 150%"
    time_style: "font-size: 500%"

# Note: every row needs to be present in the layout, even if empty
layout:
    - clock(2x1), living_room_temperature(2x1), house_mode(3x1), monitoring_checks_status(1x1)
    - humidity(1x1), weather(1x1), outside_temperature(2x1), day(1x1), evening(1x1), sleep(1x1), away(1x1)
    - washing_machine_status(1x1), dryer_status(1x1), sonos(2x2), joris_working(1x1), rijtijd_ilse(1x1), trash_pickup(2x1)
    - breakfast(1x1), cooking(1x1), living_room_light(1x1), light_living_ambience(1x1), woonkamer_tv_light(1x1), tv_table_light(1x1)
    - watch_tv(1x1), relaxing(1x1), christmas(1x1), light_dinner_table_on_off(1x1), kitchen_light_on_off(1x1), light_office_ambience(1x1), light_office(1x1), desk_light(1x1)
    - include: navigation_panel
